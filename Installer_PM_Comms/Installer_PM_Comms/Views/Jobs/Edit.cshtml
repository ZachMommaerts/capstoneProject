@model Installer_PM_Comms.Models.Job

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="JobName" class="control-label">Job Name</label>
                <input asp-for="JobName" class="form-control" />
                <span asp-validation-for="JobName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobNumber" class="control-label">Job Number</label>
                <input asp-for="JobNumber" class="form-control" />
                <span asp-validation-for="JobNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blueprints" class="control-label"></label>
                <input asp-for="Blueprints" class="form-control" />
                <span asp-validation-for="Blueprints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photos" class="control-label"></label>
                <input asp-for="Photos" class="form-control" />
                <span asp-validation-for="Photos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InstallDate" class="control-label"></label>
                <input asp-for="InstallDate" class="form-control" />
                <span asp-validation-for="InstallDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClockInOne" class="control-label">Clock In</label>
                <input asp-for="ClockInOne" class="form-control" />
                <span asp-validation-for="ClockInOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClockOutOne" class="control-label">Clock In</label>
                <input asp-for="ClockOutOne" class="form-control" />
                <span asp-validation-for="ClockOutOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletionDate" class="control-label"></label>
                <input asp-for="CompletionDate" class="form-control" />
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Completed" /> @Html.DisplayNameFor(model => model.Completed)
                </label>
            </div>
            <div>
                <label>Choose Installer</label>
                <select id="Installers">
                    <option value="zach">zach</option>
                    <option value="rick">Rick</option>
                    <option value="jerry">Jerry</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
