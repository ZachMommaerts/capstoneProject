            <div class="form-group">
                <label asp-for="Job.InstallDate" class="control-label"></label>
                <input asp-for="Job.InstallDate" class="form-control" />
                <span asp-validation-for="Job.InstallDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Blueprints" class="control-label"></label>
                <input asp-for="Job.Blueprints" class="form-control" />
                <span asp-validation-for="Job.Blueprints" class="text-danger"></span>
            </div>
            <div>
                <select id="installers" asp-items="@(new SelectList(Model.Installer.Name))"></select>
            </div>
            <div class=" form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
