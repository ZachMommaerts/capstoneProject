@model Installer_PM_Comms.Models.Job_Installs

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Job_Installs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Job.JobNumber" class="control-label"></label>
                <input asp-for="Job.JobNumber" class="form-control" />
                <span asp-validation-for="Job.JobNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.JobName" class="control-label"></label>
                <input asp-for="Job.JobName" class="form-control" />
                <span asp-validation-for="Job.JobName" class="text-danger"></span>
            </div>
            <div id="ClientFill" class="form-group">
